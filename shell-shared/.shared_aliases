#!/bin/sh

EDITOR=vim
export EDITOR

exists ()
{
  type "$1" >/dev/null 2>&1
}

#
# # ex - archive extractor
# # usage: ex <file>
ex ()
{
  if [ -f $1 ] ; then
    case $1 in
      *.tar.bz2)   tar xjf $@     ;;
      *.tar.gz)    tar xzf $@     ;;
      *.tar.xz)    tar xJf $@     ;;
      *.bz2)       bunzip2 $@     ;;
      *.rar)       unrar x $@     ;;
      *.gz)        gunzip $@      ;;
      *.tar)       tar xf $@      ;;
      *.tbz2)      tar xjf $@     ;;
      *.tgz)       tar xzf $@     ;;
      *.zip)       unzip $@       ;;
      *.Z)         uncompress $@  ;;
      *.7z)        7z x $@        ;;
      *)           echo "'$1' cannot be extracted via ex()" ;;
    esac
  else
    echo "'$1' is not a valid file"
  fi
}

# ls aliases
alias ls='exa --color=always --group-directories-first'
alias la='ls -al'
alias l='la'
alias ll='ls -l'

# (WSL) xdg-open directories in file explorer (for autojump)
if exists wslpath
then
  xdg-open ()
  {
    if [ -d "$1" ]
    then
      explorer.exe "$(wslpath -w "$1")"
    else
      /usr/bin/xdg-open "$@"
    fi
  }
fi

dotfilesDir=~/dotfiles

# dotfiles stow function
dotfiles ()
{
  local args
  local packages
  args=()
  packages=()
  while test $# -gt 0; do
    case "$1" in
      -a|--all)
        shift
        packages=("$(find $dotfilesDir/* -maxdepth 1 -name ".*" -o -type d -prune -printf "%f\n")")
        ;;
      -r|--rebuild)
        shift
        packages=("$(find $dotfilesDir/* -maxdepth 1 -name ".*" -o -type d -prune -printf "%f\n")")
        if [ -f /etc/skel/.bashrc ]
        then
          cp -f ~/dotfiles/bash/.bashrc ~/.bashrc.bak
          rm -f ~/.bashrc
          cp -f /etc/skel/.bashrc ~/dotfiles/bash/.bashrc
          ed ~/dotfiles/bash/.bashrc < ~/dotfiles/.patches/bashrc-patch.ed
          tput setaf 10;
          echo "################################################################"
          echo "~/.bashrc was successfully rebuilt."
          echo "A backup of the original was saved in ~/.bashrc.bak"
          echo "################################################################"
          echo;tput sgr0
        else
          tput setaf 11;
          echo "################################################################"
          echo "WARNING: ~/.bashrc could not be rebuilt."
          echo "################################################################"
          echo;tput sgr0
        fi
        args+="-R"
        ;;
      *)
        args+="$1"
        shift
        ;;
    esac
  done

  echo "$args[@] $packages[@]" | xargs /usr/bin/stow -d "$dotfilesDir" -t ~
}
alias dtf='dotfiles'

# youtube-dl aliases
if exists youtube-dl
then
  alias yta='youtube-dl -x --audio-format mp3'
  alias ytv='youtube-dl -f mp4'
fi

# package manager aliases
if exists pacman
then
  alias update='sudo pacman -Syu'
 
  if exists paru
  then
    aur_helper='paru'
  elif exists yay
  then
    aur_helper='yay'
  fi

  if [ -n "$aur_helper" ]
  then
    alias upall="$aur_helper -Syu"
  fi
elif exists apt
then
  alias update='sudo apt update && sudo apt upgrade'
  alias upall='sudo apt update && sudo apt full-upgrade'
fi

# backup related aliases
# (source: https://arcolinux.com/superfast-update-of-arcolinux/)
if [ -d "/etc/skel" ]
then
  alias skel='cp -Rf ~/.config ~/.config-backup-$(date +%Y.%m.%d-%H.%M.%S) && cp -rf /etc/skel/* ~'
  alias cb='sudo cp /etc/skel/.bashrc ~/.bashrc && source ~/.bashrc'
fi

# Alias for the bat program (a cat replacement) for Debian-based distros.
if exists batcat
then
  alias bat='batcat'
fi

# git aliases
alias ga='git add'
alias gaa='git add -A'
alias gap='git add -p'
alias gai='git add -i'
alias gcm='git commit -m'
alias gp='git push'
alias gpl='git pull'
alias gst='git status'
alias gd='git diff'
alias gds='git diff --staged'
alias gdh='git diff HEAD~1'
alias grh='git reset --hard'
alias grhh='git reset --hard HEAD~1'
alias grs='git reset --soft'
alias grsh='git reset --soft HEAD~1'
alias gsh='git stash'
alias gshu='git stash --include-untracked'
alias gshp='git stash pop'
alias gsha='git stash apply'
alias gshd='git stash drop'
alias gshl='git stash list'
alias gl='git log'
alias gsw='git switch'

# gh aliases (github-cli)
alias gv='gh repo view -w'

# Docker aliases
alias d='docker'
alias dps='docker ps -a'
alias dpsa='docker ps -a'
alias di='docker images'
alias dv='docker volume'
alias dvl='docker volume ls'
alias dvls='docker volume ls'
alias drmi='docker rmi'

# Docker compose aliases
alias dc='docker compose'
alias dcu='docker compose up'
alias dcub='docker compose up --build'
alias dcd='docker compose down'
alias dcda='docker compose down -v --rmi=local'
alias dcdaf='docker compose down -v --rmi=all'
alias dcbld='docker compose build'
alias dcr='docker compose run'
alias dce='docker compose exec'

# Alias for autojump alternative (zoxide) if it is being used instead of autojump
if exists zoxide
then
  alias j='z'
fi

# Alias for neovim (nvim) if it is being used instead of vim
if exists nvim
then
  alias vim='nvim'
fi

if [ -f /usr/bin/chromium ]
then
  export CHROME_EXECUTABLE="/usr/bin/chromium"
fi
